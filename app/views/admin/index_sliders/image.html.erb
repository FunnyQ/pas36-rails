<div class="container section-admin">
  <h3>新增首頁圖片 Slider</h3>
  <%= simple_form_for [:admin, @slider] do |n| %>
    <%= n.input :img, :label => "圖片" %>
    <%= n.hidden_field :category, :value => "image" %>
    <br>
    <%= n.button :submit, '送出資料', :class => "btn btn-primary pull-right" %>
    <%= link_to( '取消', admin_index_path, :class => "btn btn-default pull-right") %>
  <% end %>

</div>
