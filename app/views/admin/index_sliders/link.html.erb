<div class="container section-admin">
  <h3>新增首頁影片 Slider</h3>
  <%= simple_form_for [:admin, @slider] do |n| %>
    <%= n.input :link, :label => "Youtube 影片連結", :value => "test", :autofocus=> true %>
    <%= n.hidden_field :category, :value => "link" %>
    <br>
    <%= n.button :submit, '送出資料', :class => "btn btn-primary pull-right" %>
