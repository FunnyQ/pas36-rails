<div class="container section-admin">
  <h3>關於我們管理</h3>
  <%= link_to(new_admin_about_path, :class => "btn btn-primary") do %>
    <i class="fa fa-plus"></i> 新增項目
  <% end %>
  <table class="table table-hover">
      <thead>
        <tr>
          <th>更新日期</th>
          <th>副標題</th>
          <th class="text-center">管理選項</th>
        </tr>
      </thead>
      <tbody>
        <% @abouts.each do |about| %>
          <tr>
            <td><%= about.updated_at.strftime("%Y/%m/%d") %></td>
            <td><%= about.title %></td>
            <td class="text-center">
              <%= link_to(edit_admin_about_path(about), :class => 'btn btn-warning') do %>
                <i class="fa fa-edit"></i> 編輯
              <% end %>
              <%= link_to(admin_about_path(about), :class => 'btn btn-danger', :method => :delete, confirm: 'Are you sure?') do %>
                <i class="fa fa-remove"></i> 刪除
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

