  <%= simple_form_for [:admin, @news] do |n| %>
    <%= n.input :title, :label => "標題" %>
    <%= n.input :img, :label => "重點圖片（系統將會依比例裁切至 200 x 200）", :as => :file %>

    <% if @news.img? %>
      <div class="edit-cover">
        <h5>目前圖片</h5>
        <%= image_tag @news.img %>
      </div>
    <% end %>

    <div class="form-groupe">
      <label for="news_content">新聞內容</label>
      <%= n.bootsy_area :content, :class => "form-control", :rows => "35", :label => "標題" %>
    </div>
    <br>
    <%= n.button :submit, '送出資料', :class => "btn btn-primary pull-right" %>
    <%= link_to( '取消', admin_index_path, :class => "btn btn-default pull-right") %>
  <% end %>
