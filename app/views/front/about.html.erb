<!-- about.html -->

  <!-- page main title + background pic -->
  <div class="page_title">
    <div class="container">
      <div class="page_title-inner">
        <div class="page_title-content">
          <!-- background pic -->
          <h2></h2>
          <img class="img-responsive" src="assets/index_slider/02.jpg" alt="placeholder">
        </div>
      </div>
      <div class="banner-divider"></div>
    </div>
  </div>

  <!-- content title tabs -->
  <div class="about_tabs">
    <div class="container">

      <div class="about_tabs-wrapper">
        <div class="about_tabs-unit">
          <ul>
            <% @abouts.each do |about| %>
            <li><a href="<%= about.anchor %>"><%= about.title %></a></li>
            <% end %>
          </ul>
        </div>
      </div>

    </div>
  </div>

  <!-- content area -->
  <div class="about_content">
    <div class="container">

      <div class="about_content_wrapper">

        <% @abouts.each do |about| %>

        <div class="unit">
          <div class="content_title">
            <h3 id="<%= about.anchor %>"><%= about.title %></h3>
          </div>
          <div class="img">
            <img class="img-responsive" src="<%= about.pic %>" alt="">
          </div>
          <div class="content">
            <%= about.content.html_safe %>
            <div class="back2top"><a href="#top">▲回到頁首▲</a></div>
          </div>
        </div>

        <% end %>




      </div>

    <div class="banner-divider"></div>

    </div>
  </div>
